<div class="modal-raised">
  <div class="modal upload-modal photo-modal" id="profile-photo">
    <div class="modal-wrapper group">
      <div class="sign-in-header-text">
        <div class="logo-wrapper">
          <h4><%= user.escape("username") %></h4>
        </div>
      </div>

      <section class="tab-content group">
        <article id="signin-content" class="active tab-content-item">

            <label class="input-label">Image Preview PROFILE</label>
            <img src="" id="profile-photo-preview" width="300" height="300">
            <form class="file-input-plugin">
              <div class="input-hider">
                <input class="file-input photo-form file-input-button" data-form-type="#profile-photo" id="profile-file-input-button" type="file" name="user[img]">
              </div>
              <button class="button button-orange submit">Save</button>
            </form>


        </article>
      </section>
    </div>
  </div>
</div>
